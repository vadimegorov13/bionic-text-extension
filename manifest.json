{
  "manifest_version": 3,
  "name": "Bionic Text",
  "version": "0.0.1",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_icon": {              
      "16": "images/icon16.png",
      "32": "images/icon32.png"    
    },
    "default_title": "Bionic Text",
    "default_popup": "src/popup.html"
  }
}
